{{#if updateArticleForm}}
<h4>Update {{article.title}} by {{article.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=article.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>

      <div class="form-group">
        <label for="time">Time posted</label>
        {{input value=time id="time" placeholder=article.time}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=article.category}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      <button type=button class="btn btn-info" {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button type=button class="btn btn-info" {{action 'updateArticleForm'}}>Update</button>
{{/if}}
